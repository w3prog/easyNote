<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/default_name_event"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="#fff"
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/textView_fg_it_ev_TITLE"
        android:background="#728eb0"
        android:layout_weight="0.07" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#ddd"
        >
        <TextView
            android:textSize="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/textView_fg_it_ev_GROUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Группа события"
            android:layout_gravity="top|left"
            />
        <TextView
            android:layout_weight="6"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/textView_fg_it_ev_DATE"
            android:gravity="center"
            android:text="Дата события"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>


        </LinearLayout>


</LinearLayout>